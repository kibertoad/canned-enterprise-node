{
  "moduleFileExtensions": [
    "ts",
    "js",
    "json"
  ],
  "testMatch": [
    "<rootDir>/lib/**/*.(spec|test).ts"
  ],
  "transform": {
    "^.+\\.ts$": "ts-jest"
  },
  "testEnvironment": "node",
  "reporters": [
    "default"
  ],
  "coveragePathIgnorePatterns": [
    "<rootDir>/node_modules/",
    "<rootDir>/coverage/"
  ],
  "globals": {
    "ts-jest": {
      "diagnostics": false
    }
  }
}
