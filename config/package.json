{
  "name": "config",
  "version": "1.0.0",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "npm run build",
    "test": "jest --config=jest.config.json --runInBand --verbose",
    "test:coverage": "jest --config=jest.config.json --coverage --runInBand --verbose",
    "test:ci": "npm run eslint && npm run test:coverage",
    "test:updateSnapshot": "jest --config=jest.config.json --updateSnapshot",
    "eslint": "eslint --format codeframe lib/**/*.ts",
    "prettier": "prettier --write \"lib/**/*.ts\""
  },
  "dependencies": {
    "deepmerge": "^4.0.0",
    "dotenv": "^8.1.0",
    "memoizee": "^0.4.14"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.0.0",
    "@typescript-eslint/parser": "^2.0.0",
    "@types/dotenv": "^6.1.1",
    "@types/jest": "^24.0.18",
    "@types/memoizee": "^0.4.2",
    "@types/node": "^10.14.17",
    "eslint": "^6.3.0",
    "eslint-config-prettier": "^6.1.0",
    "eslint-plugin-prettier": "^3.1.0",
    "jest": "^24.9.0",
    "prettier": "^1.18.2",
    "ts-jest": "^24.0.2",
    "typescript": "^3.6.2"
  }
}
