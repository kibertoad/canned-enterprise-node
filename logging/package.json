{
  "name": "logging",
  "version": "1.0.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "npm run build",
    "test": "jest --config=jest.config.json --runInBand --verbose",
    "test:coverage": "jest --config=jest.config.json --coverage --runInBand --verbose",
    "test:updateSnapshots": "jest --config=jest.config.json --coverage --runInBand --verbose -u",
    "test:ci": "npm run eslint && npm run test:coverage",
    "eslint": "eslint --format codeframe lib/**/*.ts",
    "prettier": "prettier --write \"lib/**/*.ts\""
  },
  "dependencies": {
    "pino": "^5.15.0",
    "pino-pretty": "^3.5.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.12.0",
    "@typescript-eslint/parser": "^2.12.0",
    "@types/globule": "^1.1.3",
    "@types/jest": "^24.0.24",
    "@types/node": "^10.17.11",
    "@types/pino": "^5.15.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-prettier": "^3.1.2",
    "mockdate": "^2.0.5",
    "jest": "^24.9.0",
    "prettier": "^1.19.1",
    "ts-jest": "^24.2.0",
    "typescript": "^3.7.4"
  }
}
