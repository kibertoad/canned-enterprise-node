{
  "name": "logging",
  "version": "1.0.0",
  "main": "dist/index.js",
  "scripts": {
    "build": "del-cli dist/ && tsc",
    "prepublishOnly": "npm run build",
    "test": "jest --config=jest.config.json --runInBand --verbose",
    "test:coverage": "jest --config=jest.config.json --coverage --runInBand --verbose",
    "test:updateSnapshots": "jest --config=jest.config.json --coverage --runInBand --verbose -u",
    "test:ci": "npm run eslint && npm run test:coverage",
    "eslint": "eslint --format codeframe lib/**/*.ts",
    "prettier": "prettier --write \"lib/**/*.ts\""
  },
  "dependencies": {
    "pino": "^5.13.2",
    "pino-pretty": "^3.2.1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.0.0",
    "@typescript-eslint/parser": "^2.0.0",
    "@types/globule": "^1.1.3",
    "@types/jest": "^24.0.18",
    "@types/node": "^10.14.17",
    "@types/pino": "^5.8.10",
    "eslint": "^6.3.0",
    "eslint-config-prettier": "^6.1.0",
    "eslint-plugin-prettier": "^3.1.0",
    "mockdate": "^2.0.5",
    "jest": "^24.9.0",
    "prettier": "^1.18.2",
    "ts-jest": "^24.0.2",
    "typescript": "^3.6.2"
  }
}
