{
  "moduleFileExtensions": ["js", "json"],
  "testMatch": ["<rootDir>/test/**/*.(spec|test).js"],
  "testEnvironment": "node",
  "reporters": ["default"],
  "coveragePathIgnorePatterns": ["<rootDir>/node_modules/", "<rootDir>/coverage/"],
  "globals": {
    "ts-jest": {
      "diagnostics": false
    }
  },
  "coverageThreshold": {
    "global": {
      "statements": 75,
      "branches": 75,
      "functions": 75,
      "lines": 75
    }
  }
}
